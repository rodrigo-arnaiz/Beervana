{
    "version": 2,
    "framework": null,
    "builds": [
        { "src": "api/index.php", "use": "@vercel/php" }
    ],
    "routes": [
        {
            "src": "/build/assets/(.*)",
            "dest": "/build/assets/$1"
        },
        {
            "src": "/images/(.*)",
            "dest": "/public/images/$1"
        },
            {
      "src": "/assets/(.*)",
      "dest": "/public/assets/$1"
    },
        {
            "src": "/(.*\\.php)",
            "dest": "/api/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ]
}